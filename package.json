{
  "name": "standard-tsx",
  "version": "0.0.3",
  "description": "standardjs lint with TypeScript and JSX file support (with no new typescript rules)",
  "main": "src/index.js",
  "bin": {
    "standard-tsx": "./src/cli.js"
  },
  "scripts": {
    "test": "mocha --reporter spec --exit",
    "pretest": "npm run lint",
    "lint": "standard-tsx",
    "fix": "standard-tsx --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/extremeheat/standard-tsx.git"
  },
  "keywords": [
    "standard",
    "lint",
    "eslint",
    "react",
    "ts",
    "tsx",
    "typescript"
  ],
  "author": "extremeheat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/extremeheat/standard-tsx/issues"
  },
  "homepage": "https://github.com/extremeheat/standard-tsx#readme",
  "devDependencies": {
    "mocha": "^11.2.2",
    "standard-tsx": "file:."
  },
  "dependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.21.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-eslint-env-restore": "^1.0.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.26.0"
  },
  "__comment": "We need overrides as `eslint-config-standard` depends on eslint@8 and we only need config",
  "overrides": {
    "eslint": "^9.21.0"
  }
}
